<phpunit bootstrap="vendor/autoload.php" colors="true">
    <testsuites>
        <testsuite name="mySuite">
            <directory>tests</directory>
        </testsuite>
    </testsuites>
    <filter>
        <whitelist >
            <directory>./src</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="coverage-text" target="php://stdout" showUncoveredFiles="false"/>
    </logging>
</phpunit>